environment_cd()
{
	local folderPath="$1"
	cd "$folderPath" 1>/dev/null 2>/dev/null
}

environment_cdBack()
{
	cd - 1>/dev/null 2>/dev/null
}

depends git
environment_gitClean()
{
	local folderPath="$1"
	
	git -C "$folderPath" clean --quiet --force -d -x
}
